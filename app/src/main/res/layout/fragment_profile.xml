<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/profile_picture"
            android:layout_height="@dimen/profile_picture"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/leonardo_dicaprio"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_name"
            app:layout_constraintTop_toBottomOf="@+id/profile_image"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="@dimen/mountain_image_margin_left"
            android:text="@string/profile_male"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="@dimen/profile_textSize"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_margin="@dimen/profile_name_margin"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/profile_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/profile_name_margin"
            android:layout_marginLeft="36dp"
            android:text="55"
            android:textColor="@color/black"
            android:textSize="@dimen/profile_textSize_age"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/profile_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.654" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/location_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toBottomOf="@+id/profile_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_location_on_black_24dp"
            app:strokeColor="@color/profile_text_color"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/miles_away"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@+id/location_icon"
            android:textColor="@color/profile_text_color"
            app:layout_constraintTop_toBottomOf="@+id/profile_name"
            android:text="12 miles away"
            android:layout_marginLeft="30dp"
            android:textSize="20sp"/>



    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>